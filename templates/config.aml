vstack
	hstack
		spacer
		text "Config"
		spacer
	hstack
		if state.changing_api_url
			@input (on_enter->new_api_url, cancel->new_api_cancel) [label: "API URL", placeholder: "API URL"]
		else
			text "API URL: "
			text attributes.api_url
			text " "
			@button (on_click->changing_api_url) [size: "small", label: "change", style: "success"]
	spacer
	if !state.changing_api_url
		hstack
			spacer
			@button (on_click->close) [label: "Close Config", style: "success"]
			spacer
