vstack
	vstack [foreground: state.foreground_color]
		hstack
			text attributes.label
			text " (return when done)"
		border
			@ae_input (on_enter->on_enter)
				text [foreground: "dark_grey"] attributes.placeholder
		if attributes.cancel
			@button (on_click->new_api_cancel) [label: "cancel", size: "small", style: "danger"]
	text state.value
